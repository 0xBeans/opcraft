{
  "name": "opcraft",
  "version": "0.0.0",
  "description": "An infinite, unstoppable World",
  "repository": {
    "type": "git",
    "url": "https://github.com/latticexyz/opcraft.git"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.15.0",
    "husky": ">=6",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "prettier": "^2.6.2",
    "run-pty": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install && (forge --version || pnpm foundryup)",
    "commit": "cz",
    "prettier:check": "prettier --check 'packages/**/*.ts'",
    "prettier": "prettier --write 'packages/**/*.ts'",
    "lint": "eslint . --ext .ts",
    "start:ri": "run-pty % pnpm --filter @latticexyz/contracts run start % pnpm --filter @latticexyz/client run start",
    "start": "run-pty % pnpm start:contracts % pnpm start:client",
    "start:client": "wait-on tcp:8545 && pnpm --filter @latticexyz/client run start",
    "start:contracts": "pnpm --filter @latticexyz/contracts run start",
    "link:mud": "for i in node_modules/@latticexyz/*; do pnpm link @latticexyz/$(basename $i); done",
    "unlink:mud": "for i in node_modules/@latticexyz/*; do pnpm unlink @latticexyz/$(basename $i); done && pnpm install --force",
    "yalc:mud": "for i in node_modules/@latticexyz/*; do yalc add @latticexyz/$(basename $i); done",
    "unyalc:mud": "for i in node_modules/@latticexyz/*; do yalc remove @latticexyz/$(basename $i); done && pnpm install --force",
    "test": "pnpm -r test",
    "foundryup": "curl -L https://foundry.paradigm.xyz | bash && bash ~/.foundry/bin/foundryup"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,css,md,sol}": "prettier --write"
  },
  "dependencies": {}
}
