{
  "name": "mudapp",
  "version": "0.0.0",
  "description": "An on-chain game powered by mud",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "client",
      "contracts",
      "scripting"
    ]
  },
  "scripts": {
    "start": "run-pty % pnpm start:contracts % pnpm start:client",
    "start:client": "wait-on tcp:8545 && pnpm workspace ri-client run start:dev",
    "start:contracts": "pnpm workspace ri-contracts run start:hardhat"
  },
  "devDependencies": {
    "run-pty": "^3.0.0",
    "wait-on": "^6.0.1"
  }
}
